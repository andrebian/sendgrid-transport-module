{
  "name": "andrebian/sendgrid-transport-module",
  "description": "Zend Framework 2 Module that provides SendGrid as a Transport for Mail.",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "module",
    "zf2"
  ],
  "authors": [
    {
      "name": "Andre Cardoso",
      "email": "andrecardosodev@gmail.com",
      "role": "creator"
    }
  ],
  "require" : {
    "php": ">=5.3.3",
    "zendframework/zend-modulemanager": "2.* || ^3.0",
    "sendgrid/sendgrid": "4.0.4"
  },
  "require-dev": {
    "phpunit/phpunit": "4.4.*",
    "mockery/mockery": "dev-master",
    "codacy/coverage": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "SendGridTransportModule\\": [
        "src/SendGridTransportModule"
      ]
    },
    "classmap": ["Module.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "SendGridTransportModule\\": [
        "tests/SendGridTransportModule"
      ]
    }
  },
  "minimum-stability": "dev"
}
